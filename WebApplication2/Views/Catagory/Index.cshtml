@model IEnumerable<Catagory>

@{
    ViewData["Title"] = "Index";
}

<div class = "container p-3">
    <div class = "row pt-4">
        <div class = "col-6">
            <h2 class = "text-primary">Category List</h2>
        </div>
        <div class = "col-6 text-end">
            <a asp-controller = "Catagory" asp-action = "Create" class = "btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
    <br /> <br />

<table class = "table table-bordered table-striped" style = "width :100%"> 
    <thead>
        <tr>
            <th>
                Catagory Name
            </th>
            <th>
                Didplay Order
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width= "50%">
                    @obj.Name
                </td>
                <td width= "50%">
                    @obj.DisplayOrder
                </td>
                <td>
                    <div class="W-75 btn-group" role="group">
                        <a asp-controller="Catagory" asp-action="Edit" asp-route-Id="@obj.Id" 
                       class="btn btn-primary mx-2" ><i class="bi bi-pencil-square"></i></a>

                        <a asp-controller="Catagory" asp-action="Delete" asp-route-Id="@obj.Id" 
                       class="btn btn-primary mx-2" ><i class="bi bi-trash3"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>